<html>
  <head>
    <title>Little Shop Redux</title>
    <link rel="stylesheet" href="main.css"  type="text/css" />
    <link rel="shortcut icon" href="https://i.imgur.com/dfPcsdI.png" type="image/x-icon" />
  </head>
  <body>
    <header>
      <img src="https://i.imgur.com/V2ZZB07.jpg" alt="banner" height="300px" width="100%">
    </header>
    <div class="nav"  width="100px">
      <div class="navbar">
        <a href="/">Home</a>
        <div class="dropdown-1">
          <button class="dropbtn">Merchants
            <i class="la la bub"></i>
          </button>
          <div class="dropdown-content" id="drop-down">
            <a href="/merchants/new">Create a New Merchant</a>
            <a href="/merchants">Edit a Merchant</a>
            <a href="/merchants">View All Merchants</a>
            <a href="/merchants/show_input">View a Merchant</a>
          </div>
        </div>
        <div class="dropdown">
          <button class="dropbtn">Items
            <i class="la la bub"></i>
          </button>
          <div class="dropdown-content">
            <a href="/items/new">Create a New Item</a>
            <a href="/items">Edit an Item</a>
            <a href="/items">View All Items</a>
            <a href="/items/show_input">View an Item</a>
          </div>
        </div>
        <div class="dropdown">
    <button class="dropbtn">Invoices
      <i class="la la bub"></i>
    </button>
    <div class="dropdown-content" id="drop-down">
      <a href="/invoices">View All Invoices</a>
    </div>
  </div>
        </div>
      </div>
      <div class="merchant-line">
        <div class="new-merchant">
        <a id="submit" class="myButton" href="/merchants/new">Create new merchant</a>
        </div>

  <% merchants.each do |merchant| %>
    <div class="merchant-container">
       <ul>
        Id  /  <%= merchant.id %></li><br>
        Merchant  /  <%= merchant.name %></li><br>
         Created-at  /  <%= merchant.created_at %></li><br>
         Updated-at  /  <%= merchant.updated_at %></li><br>
         <a id="submit" class="myButton" href="/merchants/<%= merchant.id %>/edit">Edit</a>
           <div class="myButton">
         <form action="/merchants/<%= merchant.id %>/delete" method="POST">
           <input type="hidden" name="_method" value="delete"/>
           <input id="submit" type="submit"  class="me" value="Delete"/>
         </form>
       </ul>
     </div>
   </div>
 <% end %>
 </div>
 </body>
</html>
