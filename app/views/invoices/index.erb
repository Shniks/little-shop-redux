<% invoices.each do |invoice| %>
  <div class="card-2">
    <div class="container-2">
      <ul>
        <li>Id / <%= invoice.id %></li>
        <li>Customer Id / <%= invoice.customer_id %></li>
        <li>Merchant Id / <%= invoice.merchant_id %></li>
        <li>Status / <%= invoice.status %></li>
        <li>Created-at / <%= invoice.created_at %></li>
        <li>Updated-at / <%= invoice.updated_at %></li>
      </ul>
      <form method="post" action="/invoices/<%= invoice.id %>">
        <input id="hidden" type="hidden" name="_method" value="DELETE">
        <input type="submit" value="DELETE">
      </form>
      <form method="get" action="/invoices/<%= invoice.id %>/edit">
        <button type="submit">EDIT</button>
      </form>
    </div>
  </div>
<% end %>
