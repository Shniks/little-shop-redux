<html>
  <head>
    <title>Little Shop Redux</title>
    <link rel="stylesheet" href="main.css"  type="text/css" />
    <link rel="shortcut icon" href="https://i.imgur.com/dfPcsdI.png" type="image/x-icon" />
  </head>
  <body>
<div id="top"></div>
<div id="bottom"></div>
    <header>
      <img src="https://i.imgur.com/V2ZZB07.jpg" class="banner" alt="banner" height="300px" width="100%">
    </header>
    <div class="nav"  width="100px">
      <div class="navbar">
        <a href="/">Home</a>
        <div class="dropdown-1">
          <button class="dropbtn">Merchants
            <i class="la la bub"></i>
          </button>
          <div class="dropdown-content" id="drop-down">
            <a href="/merchants/new">Create a New Merchant</a>
            <a href="/merchants/edit_input">Edit a Merchant</a>
            <a href="/merchants">View All Merchants</a>
            <a href="/merchants/show_input">View a Merchant</a>
          </div>
        </div>
        <div class="dropdown">
          <button class="dropbtn">Items
            <i class="la la bub"></i>
          </button>
          <div class="dropdown-content">
            <a href="/items/new">Create a New Item</a>
            <a href="/items/edit_input">Edit an Item</a>
            <a href="/items">View All Items</a>
            <a href="/items/show_input">View an Item</a>
          </div>
        </div>
      </div>
    </div>
      <div id="left"></div>
  <div id="right"></div>
  <% items.each do |item| %>
  <div class="card">
    <img src="https://i.imgur.com/QdslH7j.png" alt="Ruby" height="100" width="100">
    <div class="container">
       <ul>
         <li>Id  /  <%= item.id %></li>
         <li>Item  /  <%= item.name %></li>
         <li>Description  /  <%= item.description %></li>
         <li>Unit Price  /  <%= item.unit_price %></li>
         <li>Merchant ID  /  <%= item.merchant_id %></li>
         <li>Created-at  /  <%= item.created_at %></li>
         <li>Updated-at  /  <%= item.updated_at %></li>
       </ul>
     </div>

   </div>
 <% end %>
 </body>
</html>
